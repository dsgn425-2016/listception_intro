<h1>Cards</h1>
<a href="/cards/new">Add a new card</a>
<ul>
  <% @cards.each do |card| %>
    <li>
      <p><strong><%= card.title %>:</strong></p>
      <div><%= card.desc %></div>
      <div>

        <a href="/cards/<%= card.id %>">Show</a> |
        <a href="/cards/<%= card.id %>/edit">Edit</a> |
        <a href="/cards/<%= card.id %>/destroy">Destroy</a>

      </div>
    </li>
  <% end %>
</ul>
